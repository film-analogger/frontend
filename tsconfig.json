{
    "include": [
        "@types/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "react-router.config.ts",
        "eslint.config.mts",
        "vite.config.ts",
        "**/.server/**/*",
        "**/.client/**/*",
        ".react-router/types/**/*",
        "vitest.config.ts",
        "playwright.config.ts",
        "setup-tests.ts"
    ],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "types": ["node", "vite/client","vitest/globals"],
        "target": "ES2022",
        "module": "preserve",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "rootDirs": [".", "./.react-router/types"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    }
}
